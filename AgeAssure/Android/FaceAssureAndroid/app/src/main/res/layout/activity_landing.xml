<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_blue"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:text="Estimate your age with"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/title_margin"
        android:text="PRIVATELY AGE ESTIMATION"
        android:textStyle="bold"
        android:textSize="23sp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/margin_logo"
        app:layout_constraintTop_toTopOf="@id/title_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_margin_logo_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/face_button_image"
        app:layout_constraintTop_toBottomOf="@id/margin_logo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_face_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/face_button"
        app:layout_constraintTop_toBottomOf="@id/face_button_image"
        app:layout_constraintStart_toStartOf="@id/face_button_image"
        app:layout_constraintEnd_toEndOf="@id/face_button_image"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/button_background"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="Face"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="19sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/face_button_image_2"
        app:layout_constraintTop_toBottomOf="@id/margin_logo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_face_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/video_button"
        app:layout_constraintTop_toBottomOf="@id/face_button_image_2"
        app:layout_constraintStart_toStartOf="@id/face_button_image_2"
        app:layout_constraintEnd_toEndOf="@id/face_button_image_2"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/button_background"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="Video"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textSize="19sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </androidx.cardview.widget.CardView>

   <ImageView
       android:id="@+id/privacy_notice_card"
       android:src="@drawable/ic_privacy_notice_btn"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/video_button"
       android:layout_marginStart="32dp"
       android:layout_marginEnd="32dp"
       android:layout_marginBottom="60dp"
       android:layout_marginTop="24dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
   </ImageView>
    <TextView
        app:layout_constraintStart_toStartOf="@id/privacy_notice_card"
        app:layout_constraintEnd_toEndOf="@id/privacy_notice_card"
        app:layout_constraintBottom_toBottomOf="@id/privacy_notice_card"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="18dp"
        android:text="Your privacy and security is important to us. Photos, videos and audio never leave your device."
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>